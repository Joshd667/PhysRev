<!-- Mindmap Editor Modal -->
<div x-show="showMindmapEditor"
     x-data="{ mouseDownOnBackdrop: false }"
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-150"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     @mousedown.self="mouseDownOnBackdrop = true"
     @mouseup.self="if (mouseDownOnBackdrop) closeMindmapEditor(); mouseDownOnBackdrop = false"
     @mouseleave="mouseDownOnBackdrop = false"
     class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">

    <!-- Modal Window -->
    <div @click.stop
         x-show="showMindmapEditor"
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl w-full max-w-6xl max-h-[95vh] flex flex-col overflow-hidden">

        <!-- Header -->
        <div class="border-b border-gray-200 dark:border-gray-700 bg-gradient-to-r from-cyan-50 to-blue-50 dark:from-cyan-900/20 dark:to-blue-900/20">
            <!-- Top row: Icon | Title | Close -->
            <div class="flex items-center gap-3 px-6 py-4">
                <i data-lucide="network" class="w-6 h-6 text-cyan-600 dark:text-cyan-400 flex-shrink-0"></i>

                <!-- Mindmap Title Input -->
                <input
                    x-model="mindmapEditorTitle"
                    type="text"
                    placeholder="Enter mindmap title..."
                    class="flex-1 px-4 py-2 text-lg font-semibold text-slate-800 dark:text-slate-200 placeholder-slate-400 dark:placeholder-slate-500 bg-white dark:bg-gray-700 border border-slate-300 dark:border-slate-600 rounded-lg focus:border-cyan-500 dark:focus:border-cyan-400 focus:outline-none transition-colors"
                />

                <button @click="closeMindmapEditor()" class="p-2 hover:bg-white/50 dark:hover:bg-gray-700 rounded-lg transition-colors flex-shrink-0">
                    <i data-lucide="x" class="w-5 h-5 text-gray-500 dark:text-gray-400"></i>
                </button>
            </div>
        </div>

        <!-- Toolbar -->
        <div class="border-b border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 px-3 py-2">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-2">
                    <button @click="canvasTool = 'select'" :class="canvasTool === 'select' ? 'bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'" class="p-2 rounded transition-colors" title="Select (V)">
                        <i data-lucide="mouse-pointer-2" class="w-4 h-4"></i>
                    </button>
                    <button @click="canvasTool = 'pan'" :class="canvasTool === 'pan' ? 'bg-cyan-100 dark:bg-cyan-900/30 text-cyan-700 dark:text-cyan-300' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'" class="p-2 rounded transition-colors" title="Pan (H)">
                        <i data-lucide="hand" class="w-4 h-4"></i>
                    </button>
                    <div class="w-px h-6 bg-gray-300 dark:bg-gray-600 mx-1"></div>
                    <button @click="deleteSelectedShape()" :disabled="!selectedShape" class="p-2 rounded transition-colors disabled:opacity-50 disabled:cursor-not-allowed text-gray-700 dark:text-gray-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-600 dark:hover:text-red-400" title="Delete (Del)">
                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                    </button>
                </div>
                <div class="flex items-center gap-3">
                    <div class="flex items-center gap-2 text-xs text-gray-600 dark:text-gray-400">
                        <span><strong x-text="mindmapEditorData.nodes.length"></strong> shapes</span>
                        <span class="text-gray-400">•</span>
                        <span><strong x-text="mindmapEditorData.connections.length"></strong> connections</span>
                    </div>
                    <button @click="exportMindmapAsSVG()" class="flex items-center gap-1.5 px-3 py-1.5 text-sm bg-green-50 hover:bg-green-100 dark:bg-green-900/20 dark:hover:bg-green-900/30 text-green-700 dark:text-green-300 rounded border border-green-200 dark:border-green-700 transition-colors">
                        <i data-lucide="download" class="w-3.5 h-3.5"></i>
                        <span>Export</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Main Content: Sidebar + Canvas -->
        <div class="flex-1 flex overflow-hidden" style="min-height: 500px;">
            <!-- Shape Library Sidebar -->
            <div class="w-56 border-r border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 overflow-y-auto">
                <div class="p-3">
                    <h3 class="text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide mb-3 px-1">General</h3>
                    <div class="space-y-1">
                        <!-- Rectangle -->
                        <div draggable="true" @dragstart="handleShapeDragStart($event, 'rectangle')" @dragend="handleShapeDragEnd($event)" class="cursor-move p-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 hover:border-blue-400 dark:hover:border-blue-500 hover:bg-blue-50 dark:hover:bg-blue-900/10 rounded transition-all group">
                            <div class="w-full h-12 bg-white dark:bg-gray-700 border-2 border-blue-500 rounded flex items-center justify-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                                Rectangle
                            </div>
                        </div>
                        <!-- Rounded Rectangle -->
                        <div draggable="true" @dragstart="handleShapeDragStart($event, 'rounded')" @dragend="handleShapeDragEnd($event)" class="cursor-move p-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 hover:border-green-400 dark:hover:border-green-500 hover:bg-green-50 dark:hover:bg-green-900/10 rounded transition-all group">
                            <div class="w-full h-12 bg-white dark:bg-gray-700 border-2 border-green-500 rounded-xl flex items-center justify-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                                Rounded
                            </div>
                        </div>
                        <!-- Circle -->
                        <div draggable="true" @dragstart="handleShapeDragStart($event, 'circle')" @dragend="handleShapeDragEnd($event)" class="cursor-move p-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 hover:border-purple-400 dark:hover:border-purple-500 hover:bg-purple-50 dark:hover:bg-purple-900/10 rounded transition-all group">
                            <div class="w-16 h-16 mx-auto bg-white dark:bg-gray-700 border-2 border-purple-500 rounded-full flex items-center justify-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                                Circle
                            </div>
                        </div>
                        <!-- Diamond -->
                        <div draggable="true" @dragstart="handleShapeDragStart($event, 'diamond')" @dragend="handleShapeDragEnd($event)" class="cursor-move p-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 hover:border-orange-400 dark:hover:border-orange-500 hover:bg-orange-50 dark:hover:bg-orange-900/10 rounded transition-all group">
                            <div class="w-12 h-12 mx-auto bg-white dark:bg-gray-700 border-2 border-orange-500 transform rotate-45 flex items-center justify-center">
                                <span class="text-gray-700 dark:text-gray-300 text-sm font-medium -rotate-45">◆</span>
                            </div>
                        </div>
                        <!-- Hexagon -->
                        <div draggable="true" @dragstart="handleShapeDragStart($event, 'hexagon')" @dragend="handleShapeDragEnd($event)" class="cursor-move p-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 hover:border-pink-400 dark:hover:border-pink-500 hover:bg-pink-50 dark:hover:bg-pink-900/10 rounded transition-all group">
                            <div class="relative w-full h-14 flex items-center justify-center">
                                <div class="w-20 h-14 bg-white dark:bg-gray-700 border-2 border-pink-500" style="clip-path: polygon(25% 0%, 75% 0%, 100% 50%, 75% 100%, 25% 100%, 0% 50%);">
                                    <div class="w-full h-full flex items-center justify-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                                        ⬡
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Ellipse -->
                        <div draggable="true" @dragstart="handleShapeDragStart($event, 'ellipse')" @dragend="handleShapeDragEnd($event)" class="cursor-move p-2 bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-600 hover:border-cyan-400 dark:hover:border-cyan-500 hover:bg-cyan-50 dark:hover:bg-cyan-900/10 rounded transition-all group">
                            <div class="w-full h-12 bg-white dark:bg-gray-700 border-2 border-cyan-500 rounded-full flex items-center justify-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                                Ellipse
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Canvas Area -->
            <div id="canvasDropZone" @drop="handleCanvasDrop($event)" @dragover="handleCanvasDragOver($event)" @dragleave="handleCanvasDragLeave($event)" class="flex-1 relative overflow-hidden bg-white dark:bg-gray-900">
                <!-- Grid Background -->
                <svg class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: 0;">
                    <defs>
                        <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
                            <rect width="20" height="20" fill="none"></rect>
                            <path d="M 20 0 L 0 0 0 20" fill="none" stroke="#e5e7eb" stroke-width="0.5" opacity="0.3"></path>
                        </pattern>
                    </defs>
                    <rect width="100%" height="100%" fill="url(#grid)"></rect>
                </svg>

                <!-- SVG Canvas for Connections -->
                <svg id="connectionsCanvas" class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: 1;">
                    <defs>
                        <marker id="arrowhead" markerWidth="10" markerHeight="10" refX="9" refY="3" orient="auto" markerUnits="strokeWidth">
                            <path d="M0,0 L0,6 L9,3 z" fill="#64748b"></path>
                        </marker>
                    </defs>
                </svg>

                <!-- Shapes Container -->
                <div id="shapesContainer" class="absolute inset-0" style="z-index: 2;">
                    <!-- Shapes will be rendered here -->
                </div>

                <!-- Empty State -->
                <div x-show="!mindmapEditorData.nodes || mindmapEditorData.nodes.length === 0" class="absolute inset-0 flex items-center justify-center pointer-events-none" style="z-index: 0;">
                    <div class="text-center px-8 py-6 bg-gray-50/80 dark:bg-gray-800/80 backdrop-blur-sm rounded-xl border-2 border-dashed border-gray-300 dark:border-gray-600">
                        <i data-lucide="mouse-pointer-click" class="w-12 h-12 mx-auto text-gray-400 dark:text-gray-500 mb-3"></i>
                        <h3 class="text-lg font-semibold text-gray-700 dark:text-gray-300 mb-2">Drag shapes here</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Drag shapes from the sidebar and drop them on the canvas</p>
                    </div>
                </div>

                <!-- Drop indicator -->
                <div x-show="isDraggingShape" class="absolute inset-0 border-4 border-dashed border-blue-400 dark:border-blue-500 pointer-events-none bg-blue-50/10 dark:bg-blue-900/10" style="z-index: 9;"></div>

                <!-- Zoom Controls -->
                <div class="absolute bottom-4 right-4 flex flex-col gap-1 bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-200 dark:border-gray-700 p-1" style="z-index: 10;">
                    <button @click="zoomIn()" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors">
                        <i data-lucide="zoom-in" class="w-4 h-4 text-gray-700 dark:text-gray-300"></i>
                    </button>
                    <div class="px-2 py-1 text-xs font-mono text-center text-gray-600 dark:text-gray-400 border-y border-gray-200 dark:border-gray-700">
                        <span x-text="Math.round(canvasZoom * 100)"></span>%
                    </div>
                    <button @click="zoomOut()" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors">
                        <i data-lucide="zoom-out" class="w-4 h-4 text-gray-700 dark:text-gray-300"></i>
                    </button>
                    <div class="border-t border-gray-200 dark:border-gray-700 my-0.5"></div>
                    <button @click="resetZoom()" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" title="Reset Zoom">
                        <i data-lucide="maximize-2" class="w-4 h-4 text-gray-700 dark:text-gray-300"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Footer: Tags and Actions -->
        <div class="border-t border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800/50 p-4">
            <div class="flex items-center justify-between gap-4">
                <!-- Left: Topic Tags and Stats -->
                <div class="flex items-center gap-2 min-h-[28px] overflow-hidden">
                    <!-- Tags -->
                    <div class="flex items-center gap-1.5 text-xs font-medium text-slate-600 dark:text-slate-400 flex-shrink-0">
                        <i data-lucide="tag" class="w-3.5 h-3.5 text-cyan-600 dark:text-cyan-400"></i>
                    </div>

                    <template x-if="mindmapEditorTags.length === 0">
                        <span class="text-xs text-slate-500 dark:text-slate-400 italic flex-shrink-0">None</span>
                    </template>

                    <!-- Show up to 2 tags -->
                    <template x-for="(tagId, index) in mindmapEditorTags.slice(0, 2)" :key="tagId">
                        <div class="flex items-center gap-1 px-2 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded text-xs border border-blue-300 dark:border-blue-700 flex-shrink-0">
                            <span class="font-mono font-bold" x-text="tagId"></span>
                            <span class="whitespace-nowrap" x-text="topicLookup[tagId] ? topicLookup[tagId].topicTitle : ''"></span>
                            <button
                                @click="removeTagDirect('mindmap', tagId)"
                                class="hover:bg-blue-200 dark:hover:bg-blue-800 rounded p-0.5 transition-colors">
                                <i data-lucide="x" class="w-2.5 h-2.5"></i>
                            </button>
                        </div>
                    </template>

                    <!-- +x indicator for overflow -->
                    <template x-if="mindmapEditorTags.length > 2">
                        <button
                            @click="openTagSelector('mindmap')"
                            type="button"
                            class="flex items-center gap-1 px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-700 dark:text-slate-300 rounded text-xs font-medium hover:bg-slate-200 dark:hover:bg-slate-600 transition-colors flex-shrink-0">
                            <span x-text="`+${mindmapEditorTags.length - 2}`"></span>
                        </button>
                    </template>

                    <button
                        @click="openTagSelector('mindmap')"
                        type="button"
                        class="flex items-center gap-1 px-2 py-1 text-xs border border-dashed border-cyan-400 dark:border-cyan-600 hover:bg-cyan-50 dark:hover:bg-cyan-900/20 text-cyan-600 dark:text-cyan-400 rounded transition-colors flex-shrink-0 ml-auto">
                        <i data-lucide="plus" class="w-3 h-3"></i>
                        <span>Add Tag</span>
                    </button>
                </div>

                <!-- Right: Action Buttons -->
                <div class="flex items-center gap-2">
                    <button @click="closeMindmapEditor()" class="px-3 py-1.5 text-sm text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 border border-gray-300 dark:border-gray-600 rounded transition-colors">
                        Cancel
                    </button>
                    <button @click="saveMindmap()" class="px-3 py-1.5 text-sm bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-700 hover:to-blue-700 text-white rounded transition-colors flex items-center gap-1.5">
                        <i data-lucide="save" class="w-3.5 h-3.5"></i>
                        <span x-text="mindmapEditorMode === 'create' ? 'Create' : 'Save'"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
